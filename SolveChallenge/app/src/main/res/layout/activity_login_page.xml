<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha=".90"
    android:background="@drawable/bacground_signin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.cz3003.rubberduck.solvechallenge.LoginPage">


    <ImageView
        android:id="@+id/question_mark"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/question_mark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/question_mark"
        android:id="@+id/name_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/name_box"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/user_icon"
            android:drawablePadding="15dp"
            android:hint="Name"
            android:maxLength="15"
            android:maxLines="1"
            android:textColor="#FF53C39A"
            android:textColorHint="#fff"
            android:textSize="20sp" />

        <Spinner
            android:layout_width="0dp"
            android:id="@+id/user_role_spinner"
            android:layout_height="40dp"
            android:layout_weight=".34"
            android:textAlignment="center"
            />
        <!--Add a spinner to select male or female-->
    </LinearLayout>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/email_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="15dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="#FF53C39A"
        android:textColorHint="#fff"
        android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/password_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_box">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/password_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/password_icon"
            android:drawablePadding="15dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="15"
            android:textColor="#53c39a"
            android:textColorHint="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/password_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/password_box"
            android:layout_alignParentRight="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:text="SHOW"
            android:textColor="#fff" />

    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/start_button"
        android:text="Enter Game"
        android:id="@+id/start_button"
        android:textColor="#fff"
        android:foreground="?attr/selectableItemBackground"
        android:layout_below="@id/password_bar"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="20sp" />

    <!--<Button-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Help"-->
        <!--android:textAllCaps="false"-->
        <!--android:textColor="#fff"-->
        <!--android:onClick="showHelp"-->
        <!--android:drawableLeft="@drawable/help"-->
        <!--android:background="?attr/actionBarItemBackground"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_alignParentBottom="true"/>-->

</RelativeLayout>
