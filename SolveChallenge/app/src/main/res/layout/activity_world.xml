<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_World">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_back_world"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:srcCompat="@android:drawable/ic_menu_revert"
            android:tint="@android:color/white">
        </android.support.design.widget.FloatingActionButton>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_intro_World"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_intro_world"
                android:drawableTop="@drawable/img_design_world"
                android:paddingTop="25dp"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btn_analysis_World"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F3F0A2"
                android:drawableTop="@drawable/img_requirements_world"
                android:paddingTop="25dp"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_design_World"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_design_world"
                android:drawableLeft="@drawable/img_impl_world"
                android:paddingLeft="45dp"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_testing_World"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_testing_world"
                android:drawableTop="@drawable/img_testing_world"
                android:paddingTop="25dp"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_maintainance_World"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/btn_maintain_world"
                android:drawableTop="@drawable/img_maintainance_world"
                android:paddingTop="25dp"
                android:text="Maintenance"
                android:textAllCaps="false"
                android:textColor="#000"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/btn_leaderboard_world"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_leaderboard_world"
                android:drawableTop="@drawable/img_leaderboard_world"
                android:textAllCaps="false"
                android:textColor="#000"
                android:paddingTop="20dp"
                android:text="LeaderBoard"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_challenge_world"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_leaderboard_world"
                android:drawableTop="@drawable/img_challenge_world"
                android:textAllCaps="false"
                android:textColor="#000"
                android:paddingTop="20dp"
                android:text="Create Challenge"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_assignment_world"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/btn_leaderboard_world"
                android:drawableTop="@drawable/img_assignment_world"
                android:textAllCaps="false"
                android:paddingTop="20dp"
                android:textColor="#000"
                android:text="Assignment"

                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>